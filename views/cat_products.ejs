<% include _layouts/header %>

<section class="row products">
    
    <% products.forEach(function(p){ %>
            <section class="col-xs-12 col-md-4 p">
                <a class="pa" href="/products/<%= p.category %>/<%= p.slug %>">
                    <img class="pimage" src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
                </a>
                <h3 style="margin-top: 40px"><%= p.title %></h3>
                <h4>Rs.<%= parseFloat(p.price).toFixed(2) %></h4>
                <a class="vd" href="/products/<%= p.category %>/<%= p.slug %>">View Details</a>
            </section>
        <% }); %>
    
</section>

<% include _layouts/footer %>